<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:descendantFocusability="blocksDescendants"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/aufnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/co_gstrp"
        android:text="Order Number"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/co_gstrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:text="Date" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aufnr"
        android:layout_below="@+id/aufnr"
        android:layout_margin="1dp"
        android:text="Name" />

    <TextView
        android:id="@+id/auftext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/name"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/order_status"
        android:maxLines="5"
        android:text="Description" />

    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/co_gstrp"
        android:layout_alignTop="@+id/auftext"
        android:text="@string/complete" />

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/zhour"
        android:layout_alignBottom="@+id/zhour"
        android:layout_alignRight="@+id/order_status"
        android:text="@string/hours" />

    <TextView
        android:id="@+id/zhour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/order_status"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/hours"
        android:text="Time" />

</RelativeLayout>