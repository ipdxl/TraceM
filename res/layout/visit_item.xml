<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:descendantFocusability="blocksDescendants"
    tools:ignore="HardcodedText" 
    style="@style/listview_selected_item">

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_visit"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/status"
        android:layout_toRightOf="@+id/id_schedule"
        android:lines="2"
        android:minLines="5"
        android:text="Comment"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/fini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/id_visit"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="yyyy-MM-dd"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/ffin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tfin"
        android:layout_alignBottom="@+id/tfin"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:text="yyyy-MM-dd"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tini"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_toRightOf="@+id/hini"
        android:text="@string/automatic" />

    <TextView
        android:id="@+id/hini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tini"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/fini"
        android:text="hh:mm:ss"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tfin"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tini"
        android:layout_below="@+id/tini"
        android:text="@string/automatic" />

    <TextView
        android:id="@+id/hfin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tfin"
        android:layout_alignBottom="@+id/tfin"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/fini"
        android:text="hh:mm:ss"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckedTextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hfin"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:checked="false"
        android:gravity="center" />

    <TextView
        android:id="@+id/visit_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/id_schedule"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/visit_id" />

    <TextView
        android:id="@+id/id_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/visit_no"
        android:layout_alignBottom="@+id/visit_no"
        android:layout_toRightOf="@+id/visit_no"
        android:text="id visit"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/id_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Id schedule"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>